{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="css/register.css">
{{/section}}

<div class="container">

    <div class="register-wrapper">

        <img class="logo" src="/images/logo.png"/>

        <form action="user/login" class="form" autocomplete="off">
            <h1 class="form-title">注册</h1>
            <p><input id="J_username" type="input" name="username" required="required" autocomplete="off" placeholder="用户名"/ ></p>
            <p><input id="J_password" type="password" name="password" required="required" autocomplete="off" placeholder="密码"/></p>
            <p><input id="J_passwordonse" type="password" name="password" required="required" autocomplete="off" placeholder="再次输入密码"/></p>
            <p>
            <input id="J_regist" type="submit" name="submit" value="注册"></p>
        </form>

        <footer class="loginhelp">
            <a href="/updatepassword">忘记密码？</a>
            <a href="/">已有账号，去登录</a>
        </footer>
    </div>

   <footer class="footer-copy">图加科技@2016-09-01</footer>
</div>

{{#section 'jscodelink'}}
    <script type="text/javascript" src="js/register.js"></script>
{{/section}}