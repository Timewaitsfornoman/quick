{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="css/login.css">
{{/section}}

   <div class="login-wrapper">

        <img class="logo" src="/images/logo.png"/>

        <form method="post" action="user/login" class="form" autocomplete="off">
            <h1 class="form-title">登录</h1>
            <p>
                <input id="J_username" type="input" name="username" required="required" autocomplete="off" placeholder="用户名"/ >
            </p>
            <p>
                <input id="J_password" type="password" name="password" required="required" autocomplete="off" placeholder="密码"/>
            </p>
            <p class="remember-box">
                <label class="remember-label" for="J_save">
                    <input class="remember" id="J_save" type="checkbox" name="remember"/>
                    记住密码
                </label>
            </p>
            <p>
                <input id="J_login" type="submit" name="submit" value="登陆"/>
            </p>
        </form>

        <footer class="loginhelp">
            <a href="/updatepassword">忘记密码？</a>
            <a href="/register">注册账号</a>
        </footer>
   </div>
   
   <footer class="footer-copy loading">图加科技@2016-09-01</footer>

{{#section 'jscodelink'}}
    <script type="text/javascript" src="js/login.js"></script>
{{/section}}